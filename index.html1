<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Winamp Player</title>
</head>
<body>
    <h1>Winamp Test</h1>
    <div id="winamp-container"></div>

    <!-- Load Webamp.js dynamically -->
    <script>
        function loadScript(url, callback) {
            let script = document.createElement("script");
            script.type = "text/javascript";
            script.src = url;
            script.onload = callback;
            document.body.appendChild(script);
        }

        loadScript("https://unpkg.com/webamp", function () {
            console.log("Webamp script loaded!");

            if (typeof Webamp === "undefined") {
                console.error("Webamp is still not defined.");
                return;
            }

            console.log("Webamp is now available.");
            const webamp = new Webamp({
                initialTracks: [],
                initialSkin: {
                    url: "https://raw.githubusercontent.com/amelazmarino/winamp-host/main/Windows_9x.wsz"
                }
            });

            webamp.renderWhenReady(document.getElementById("winamp-container"));
        });
    </script>
</body>
</html>
